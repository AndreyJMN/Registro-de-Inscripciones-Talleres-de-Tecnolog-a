@model Registro_de_Inscripciones___Talleres_de_Tecnología.Models.Inscripcion

@{
    ViewData["Title"] = "Nueva Inscripción";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">

            <h2 class="fw-bold mb-3">Registrar Inscripción</h2>

            <form asp-action="Crear" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Apellidos" class="form-label"></label>
                    <input asp-for="Apellidos" class="form-control" />
                    <span asp-validation-for="Apellidos" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Telefono" class="form-label"></label>
                    <input asp-for="Telefono" class="form-control" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Taller" class="form-label"></label>
                    <select asp-for="Taller" class="form-select" asp-items="new SelectList(ViewBag.Talleres)">
                        <option value="">Seleccione un taller...</option>
                    </select>
                    <span asp-validation-for="Taller" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NivelExperiencia" class="form-label"></label>
                    <select asp-for="NivelExperiencia" class="form-select" asp-items="new SelectList(ViewBag.Niveles)">
                        <option value="">Seleccione un nivel...</option>
                    </select>
                    <span asp-validation-for="NivelExperiencia" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FechaTaller" class="form-label"></label>
                    <input asp-for="FechaTaller" class="form-control" type="date" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="FechaTaller" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="AceptaTerminos" class="form-check-input" />
                    <label asp-for="AceptaTerminos" class="form-check-label"></label>
                    <span asp-validation-for="AceptaTerminos" class="text-danger"></span>
                </div>

                <button class="btn btn-black" type="submit">Registrar</button>
                <a asp-action="Index" class="btn btn-outline-black">Volver</a>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
